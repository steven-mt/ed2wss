---
// Component imports
import { Layout } from "@globals"
---

<Layout title="Astro PWA Starter">
	<section class="p-6 flex-1 flex flex-col justify-between items-center">
		<div class="max-w-2xl flex flex-col flex-1 space-y-2">
			<div class="space-y-2 text-center">
				<h1 class="text-4xl font-semibold">ðŸŸ¢ astro-pwa-starter</h1>
				<p class="italic">
					It works! Check out <span class="p-1 rounded-lg bg-gray-100 font-mono"
						>/src/pages</span
					> to get started.
				</p>
			</div>

			<div>Enter import file contents here:</div>

			<textarea
				name="text"
				id="input-area"
				cols="100"
				rows="3"
				class="resize-none border-2"></textarea>

			<button id="convert-button">Convert</button>

			<div>Output:</div>

			<textarea id="output-area" class="resize-none border-2" disabled
			></textarea>
		</div>
	</section>

	<script src="../scripts/index.ts"></script>
</Layout>
